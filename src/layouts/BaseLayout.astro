---
import '@fontsource/montserrat';

import Nav from "./components/Nav.astro";
import Footer from "./components/Footer.astro";

const { title, heroTitle } = Astro.props;
---
<style>
    * {
        font-family: 'Montserrat';
    }
</style>

<html>
    <head>
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-93Z0Z0RF18"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-93Z0Z0RF18');
        </script>
        
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">

        <title>{ title != null ? title + ' | Mince Pie Review' : 'Mince Pie Review' }</title>

        <meta name="description" content="Mince Pie Review"> 
        <meta name="keywords" content="Isle of wight, mince pies, festive, christmas, food, ratings, reviews">
        <meta name="author" content="Matrix Create">

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#1E1E1E">

        <meta property="og:url" content="/">
        <meta property="og:title" content="Mince Pie Review by Matrix Create">
        <meta property="og:description" content="Mince Pie Review">
        <meta property="og:image" content="/assets/images/ogimg.jpg">
    </head>

    <body class='bg-brandyellow-500'>
        <Nav/>
        <slot />
        <Footer/>
    </body>
</html>
